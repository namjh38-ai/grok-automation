{
    "manifest_version": 3,
    "name": "Grok Automation Clone",
    "version": "1.0",
    "description": "Automate prompt generation and downloads on Grok.com",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://grok.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Grok Automation Side Panel"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://grok.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}